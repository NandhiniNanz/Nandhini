<apex:page standardController="Requirement__c" >
    <apex:form >
        
        <apex:pageBlock title="Requirement">

            <apex:pageBlockSection columns="2">
                <apex:inputField value="{!Requirement__c.Website__c}"/>
                <apex:inputField value="{!Requirement__c.Type__c}" required="false"/>
                <apex:inputField value="{!Requirement__c.Name}" required="true"/>
                <apex:inputField value="{!Requirement__c.No_of_Candidates__c}"/>
                 <apex:inputField value="{!Requirement__c.Skills__c}"/>
                 
                
           </apex:pageBlockSection>

            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockButtons>

        </apex:pageBlock>
        
    </apex:form>
</apex:page>